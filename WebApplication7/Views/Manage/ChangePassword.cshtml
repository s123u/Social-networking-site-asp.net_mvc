@model WebApplication7.Models.ChangePasswordViewModel
@{ ViewBag.Title = "Change Password"; }

<link href="~/Content/css/main.min.css" rel="stylesheet" />
<link href="~/Content/css/color.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/Content/css/responsive.css" rel="stylesheet" />

<div class="theme-layout">
    <div class="container-fluid pdng0">
        <div class="row merged">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="land-featurearea">
                    <div class="land-meta">
                        <h1>Winku</h1>
                        <p class="mb-5">
                            Winku is free to use for as long as you want with two active projects.
                        </p>
                        <div class="friend-logo mb-5 mt-5">
                            <span><img src="~/Content/images/wink.png" /></span>
                        </div>
                        <a href="#" title="" class="folow-me">Follow Us on</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="login-reg-bg">
                    <div class="log-reg-area sign">
                        <h2 class="log-title">Change Password</h2>


                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control border-bottom", placeholder = "Old Password", style = "font-size: 13px; height: 40px; width: 300px;" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control border-bottom", placeholder = "New Password", style = "font-size: 13px; height: 40px; width: 300px;" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-bottom", placeholder = "Confirm Password", style = "font-size: 13px; height: 40px; width: 300px;" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Change password" class="btn btn-primary text-center" style="font-size: 16px; height: 40px; " />
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script data-cfasync="false" src="../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
<script src="~/Content/js/main.min.js"></script>
<script src="~/Content/js/script.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
